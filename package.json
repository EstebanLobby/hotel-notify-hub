{
  "name": "hotel-notify-hub",
  "version": "1.3.3",
  "description": "Sistema de gesti√≥n de notificaciones para hoteles",
  "main": "index.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test tests/e2e/login-simple.spec.js",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest tests/integration/hotel-workflow-simple.test.js",
    "test:performance": "jest tests/performance/performance.test.js",
    "serve": "http-server . -p 8080 -c-1",
    "test:all": "npm run test:unit & npm run test:integration & npm run test:performance",
    "test:full": "npm run test:unit && npm run test:integration && npm run test:performance && npm run test:e2e"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.1.5",
    "babel-jest": "^29.7.0",
    "fetch-mock": "^9.11.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/charts.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "!<rootDir>/tests/e2e/**/*.spec.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/tests/e2e/",
      "<rootDir>/tests/integration/hotel-workflow.test.js"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(fetch-mock)/)"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/js/$1"
    }
  },
  "keywords": [
    "hotel",
    "notifications",
    "dashboard",
    "management"
  ],
  "author": "Esteban Villalba",
  "license": "GoLobby"
}
